{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "react/prop-types": 0,
    "semi": ["error", "always"],
    "no-await-in-loop": 1,
    "no-console": 1,
    "no-control-regex": 0,
    "no-extra-boolean-cast": 0
  }
}
